<h1>Profiles</h1>
<hr>
<div class="row">
  <div id="admins" class="col">
    <h2>Admin</h2>
    <% @users.admins.each do |user| %>
      <p>
        <%= link_to user.first_name, profile_path(user) %>
      </p>
    <% end %>
  </div>
  <div id="managers" class="col">
    <h2>Manager</h2>
    <% @users.managers.each do |user| %>
      <p>
        <%= link_to user.first_name, profile_path(user) %>
      </p>
    <% end %>
  </div>
  <div id="staff" class="col">
    <h2>Staff</h2>
    <% @users.staff.each do |user| %>
      <p>
        <%= link_to user.first_name, profile_path(user) %>
      </p>
    <% end %>
  </div>
</div>

<% if current_user.role == "admin" %>
  <div class="container text-center">
    <div class="row">
      <div id="create_user" class="col">
        <h1><%= link_to "Create User", new_profile_path %></h1>
      </div>
    </div>
  </div>
<% elsif current_user.role == "manager" %>
  <div class="container text-center">
    <div class="row">
      <div id="create_user" class="col">
        <h1><%= link_to "Create User", new_profile_path %></h1>
      </div>
    </div>
  </div>
<% end %>
