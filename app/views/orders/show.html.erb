
<%= render @order %>
<% if current_user.role == "admin" || current_user.role == "manager" %>
  <div>
    <%= button_to "Edit Order ##{@order.id}", edit_order_path(@order), method: :get %>
    <p>
      <%= button_to "All Orders", orders_path, method: :get %>
      <p>
        <%= button_to "Delete Order ##{@order.id}", @order, method: :delete %>
      </div>
    <% elsif current_user.role == "staff" %>
      <div>
        <%= button_to "Edit Order ##{@order.id}", edit_order_path(@order), method: :get %>
        <p>
          <%= button_to "All Orders", orders_path, method: :get %>
          <p>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</div>
