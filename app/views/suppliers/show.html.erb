
<%= render @supplier %>

<% if current_user.role == "admin" || current_user.role == "manager" %>
  <div>

    <%= button_to "All Suppliers", suppliers_path, method: :get %>
    <p>
      <%= button_to "Edit #{@supplier.name}", edit_supplier_path, method: :get %>
      <p>
        <%= button_to "Delete Supplier ##{@supplier.id}", @supplier, method: :delete %>
      </div>
    <% elsif current_user.role == "staff" %>
      <div>
        <p>
          <%= button_to "All Suppliers", suppliers_path, method: :get %>
          <p>
          </div>
        <% end  %>
      </div>
    </div>
  </div>
</div>
