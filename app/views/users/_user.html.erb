<div id="<%= dom_id user %>">

  <p>
    <strong>Name:</strong>
    <%= user.first_name + " " + user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag user.image %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role.capitalize %>
  </p>

  <p>
    <strong>Bio:</strong>
    <%= user.bio %>
  </p>

</div>
